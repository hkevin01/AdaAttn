# =============================================================================
# EditorConfig - Consistent coding styles across editors and IDEs
# https://editorconfig.org
# =============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Python type stubs
[*.pyi]
indent_size = 4

# CUDA files
[*.{cu,cuh}]
indent_size = 2
max_line_length = 100

# C/C++ files
[*.{c,h,cpp,hpp,cc,hh,cxx,hxx}]
indent_size = 2
max_line_length = 100

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

# Git files
[.git*]
indent_size = 4

# Config files
[*.{cfg,ini,conf}]
indent_size = 4
